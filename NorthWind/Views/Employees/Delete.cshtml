@model NorthWind.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<h2>Delete Employee</h2>

<form asp-action="Delete">
    <input hidden asp-for="EmployeeId" />
    <div class="form-group">
        <label asp-for="LastName">Last Name</label>
        <input disabled asp-for="LastName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName">First Name</label>
        <input disabled asp-for="FirstName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthDate">Birth Date</label>
        <input disabled asp-for="BirthDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Photo">Photo</label>
        <input disabled asp-for="Photo" class="form-control" />
    </div>
    <div class="form-group pb-2">
        <label asp-for="Notes">Notes</label>
        <textarea disabled asp-for="Notes" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>
