@model IEnumerable<NorthWind.Models.Employee>

@{
    ViewData["Title"] = "Employee List";
    //Layout = "~/Views/Shared/_Layout.cshtml"; // Assuming you have a shared layout
}

<div class="container mt-4">
    <h2>Employee List</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Birth Date</th>
                <th>Photo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <th>@employee.Photo</th>
                    <td>@(employee.BirthDate.HasValue ? employee.BirthDate.Value.ToShortDateString() : "")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-secondary">Details</a>
                        <a asp-action="Delete" asp-route-id="@employee.EmployeeId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
